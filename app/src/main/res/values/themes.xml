<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:fontFamily">@raw/almarai_regular</item>
        <item name="android:statusBarColor" tools:targetApi="l">@android:color/transparent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:actionMenuTextColor">@color/defaultTextColor</item>
        <item name="popupMenuBackground">@color/black</item>
        <item name="materialButtonStyle">@style/SharingAppButton</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="AppThemeDark" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:fontFamily">@raw/almarai_regular</item>
        <item name="android:statusBarColor" tools:targetApi="l">@android:color/transparent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:actionMenuTextColor">@color/defaultTextColor</item>
        <item name="popupMenuBackground">@color/white</item>
        <item name="materialButtonStyle">@style/SharingAppButton</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="FullScreenAppTheme" parent="AppTheme">
        <item name="android:windowLayoutInDisplayCutoutMode" tools:targetApi="27">always</item>
    </style>

    <style name="ShapeAppearanceOverlay.MyApp.Button.Rounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="SharingAppButton" parent="Widget.MaterialComponents.Button">
        <item name="materialThemeOverlay">@style/OverlaySharingAppButton</item>
    </style>
    
    <style name="OverlaySharingAppButton">
        <item name="colorPrimary">@color/colorSecondary</item>
    </style>

    
</resources>