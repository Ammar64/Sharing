<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.AppToAppSharingActivity.fragments.ListenerFragment"
    android:orientation="vertical"
    android:gravity="center"
    tools:background="@drawable/gradient_background_dark">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#ffffff"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp"
        android:padding="24dp">
        <ImageView
            android:id="@+id/IV_DeviceListenerQRCode"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:contentDescription="QR Code" />
    </androidx.cardview.widget.CardView>

    <com.ammar.sharing.custom.ui.AdaptiveTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/device_listener_qr_code"
        android:textAlignment="center"
        android:paddingHorizontal="18dp"
        android:layout_marginTop="12dp" />
</LinearLayout>