<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:clickable="true"
    android:focusable="true">

    <ProgressBar
        android:id="@+id/PB_FileUploadProgress"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/TV_FileUploadProgress"
        app:layout_constraintEnd_toStartOf="@id/TV_FileUploadProgress"
        app:layout_constraintStart_toStartOf="@+id/TV_OperationType"
        app:layout_constraintTop_toTopOf="@id/TV_FileUploadProgress"
        android:paddingEnd="8dp"/>

    <com.ammar.sharing.custom.ui.AdaptiveTextView
        android:id="@+id/TV_FileUploadName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textAlignment="viewStart"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="file.png" />


    <com.ammar.sharing.custom.ui.AdaptiveTextView
        android:id="@+id/TV_FileUploadProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TV_OperationType"
        android:layout_marginTop="-5dp"
        tools:text="60%" />


    <com.ammar.sharing.custom.ui.AdaptiveTextView
        android:id="@+id/TV_OperationType"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@id/TV_FileUploadName"
        app:layout_constraintEnd_toStartOf="@id/TV_FileTransferInfo"
        app:layout_constraintTop_toBottomOf="@+id/TV_FileUploadName"
        android:layout_marginEnd="4dp"
        android:layout_marginTop="-5dp"
        android:singleLine="true"
        android:ellipsize="start"
        tools:text="Sending to 192.168.1.15" />

    <com.ammar.sharing.custom.ui.AdaptiveTextView
        android:id="@+id/TV_FileTransferInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/TV_OperationType"
        app:layout_constraintEnd_toEndOf="@+id/TV_FileUploadProgress"
        app:layout_constraintTop_toTopOf="@+id/TV_OperationType"
        android:maxLines="1"
        tools:text="24 MB / 35 MB            2 MB/S" />

</androidx.constraintlayout.widget.ConstraintLayout>