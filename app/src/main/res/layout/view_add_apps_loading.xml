<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="10dp"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:id="@+id/CV_AppIconLPH"
        android:layout_width="50dp"
        android:layout_height="50dp"
        tools:src="@drawable/icon_app"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CV_CheckBoxLPH"
        android:layout_marginTop="-8dp"
        android:contentDescription="@string/app_icon_acc_desc"
        app:cardCornerRadius="25dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@color/placeholder" />

    <androidx.cardview.widget.CardView
        android:id="@+id/CV_CheckBoxLPH"
        android:clickable="false"
        android:focusable="false"
        android:layout_width="16dp"
        android:layout_height="16dp"
        app:cardBackgroundColor="@color/placeholder"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/CV_AppIconLPH"
        android:layout_marginStart="-8dp"
        app:cardPreventCornerOverlap="true"
        app:cardElevation="0dp" />

    <View
        android:id="@+id/TV_AppNameLPH"
        android:layout_width="70dp"
        android:layout_height="15dp"
        android:background="@color/placeholder"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@id/CV_AppIconLPH"
        app:layout_constraintStart_toStartOf="@id/CV_AppIconLPH"
        app:layout_constraintEnd_toEndOf="@id/CV_AppIconLPH"
        android:layout_centerHorizontal="true"/>

</androidx.constraintlayout.widget.ConstraintLayout>